datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native"]
}

model Todo {
    uid String @id @default(cuid())
    created_at DateTime
    text String
    done Boolean
    user User @relation(fields: [userEmail], references: [email])
    userEmail String
}

model User {
    email String @id
    password String
    session Session?
    todos Todo[]
    authCredential AuthCredential?
}

model Session {
    id String @id
    user User @relation(fields: [email], references: [email])
    email String
}

model AuthCredential {
    email String @id
    accessToken String
    refreshToken String
    scope String
    tokenType String
    expiryDate Int
    user User @relation(fields: [email], references: [email])
}
